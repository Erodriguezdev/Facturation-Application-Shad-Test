@using Shared;

@{
    ViewData["Title"] = "Curstomers";
    List<CustomerModel> Customers = (List<CustomerModel>)ViewData["Customers"]; 
}

<body>

    <div>   <p style="text-align:right; ">  <a class="nav-link text-dark" asp-area="" asp-controller="Customer" asp-action="AddCustomer">Agregar</a></p></div>
   

    <br />
    <div class="myDiv"> <h3>Clientes</h3></div>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>
                    Ciente
                </th>
                <th>
                    Dirección
                </th>
                <th>
                    Tipo Cliente
                </th>
                <th>
                    Estado
                </th>
            </tr>
        </thead>

        <tbody>
            @foreach (var e in Customers)
            {
                <tr>
                    <td>@e.Name</td>
                    <td>@e.Address</td>
                    <td>@e.TypeCustomer</td>
                    <td>
                        @(e.Status ? "Activo" : "Inactivo")

                      </td>
                    <td width="100px">

                        <a asp-action="ModifyCustomer" asp-controller="Customer" asp-route-itemid="@e.Id">Editar</a>
                    </td>

                </tr>
            }
        </tbody>
    </table>





</body>

<style>
    .myDiv {
        border: 2px outset black;
        background-color: darkblue;
        color: white;
        text-align: center;
    }
</style>